@model IEnumerable<Transaction>

<div class="row">
    <div class="col-md-8 offset-md-2">
        <h1>PassBook</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.AccountNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.HolderName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Amount)
                        </th>
                    <th>
                        <a asp-action="CreateOrUpdate" class="btn btn-sm btn-success">
                            <i class="fa-solid fa-plus"></i>
                        </a>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.AccountNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.HolderName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Amount)
                        </td>       
                        
                        <td>
                            <form asp-action="Delete" asp-route-id="@item.TransactionID">
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="CreateOrUpdate" asp-route-id="@item.TransactionID" class="btn btn-warning">
                                        <i class="fa-solid fa-pen-circle"></i>
                                    </a>
                                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure to delete this record?')">
                                        <i class="fa-solid fa-trash-can"></i>
                                    </button>
                                </div>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>