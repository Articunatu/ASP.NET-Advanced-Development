@model Transaction

@{
    ViewData["Title"] = "Transaction";
}

<div class="row">
    
    <div class="col-md-6 offset-md-3">
        <h1>Transaction</h1>
        <form asp-action="CreateOrUpdate">  

        <input type="hidden" asp-for="TransactionID" />
        <input type="hidden" asp-for="Date" />

        <div class="form-group">
            <label asp-for="AccountNumber" class="controll-label"></label>
            <input asp-for="AccountNumber" class="form-control" />
            <span asp-validation-for="AccountNumber" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="HolderName" class="controll-label"></label>
            <input asp-for="HolderName" class="form-control" />
                <span asp-validation-for="HolderName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="BankName" class="controll-label"></label>
            <input asp-for="BankName" class="form-control" />
                <span asp-validation-for="BankName" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="SWIFTCode" class="controll-label"></label>
                        <input asp-for="SWIFTCode" class="form-control" />
                    </div>
            </div>

            <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Amount" class="controll-label"></label>
                        <input asp-for="Amount" class="form-control" />
                    </div>
            </div>
        </div>

        <div class="row mt-2">
            <div class="col-md-6">
                <div class="form-group">
                    <input type="submit" value="Submit" class="btn-primary w-100" />
                </div>
            </div>
            <div class="col-md-6">
                <a asp-action="Index" class="btn btn-secondary w-100">View All Transactions</a>
@*                <span asp-validation-for=""></span>
*@            </div>
        </div>
        </form>
    </div>
</div>